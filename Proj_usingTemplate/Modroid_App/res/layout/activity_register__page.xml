<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Register_Page" >

    <TextView
        android:id="@+id/TV_createUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="27dp"
        android:text="@string/create_username"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_createPSW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TV_createUsername"
        android:layout_below="@+id/ET_createUsername"
        android:layout_marginTop="19dp"
        android:text="create password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ET_createUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ET_createPSW"
        android:layout_below="@+id/TV_createUsername"
        android:ems="12"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/ET_createPSW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TV_createPSW"
        android:ems="12"
        android:inputType="textPassword"
        android:textSize="12sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ET_typeinPSWAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ET_createPSW"
        android:layout_below="@+id/TV_checkPSW"
        android:ems="12"
        android:hint="@string/hint_typeinPSWAgain"
        android:inputType="textPassword"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TV_checkPSW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TV_createPSW"
        android:layout_below="@+id/ET_createPSW"
        android:layout_marginTop="22dp"
        android:text="type in psw again"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TV_emailAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TV_checkPSW"
        android:layout_below="@+id/ET_typeinPSWAgain"
        android:layout_marginTop="18dp"
        android:text="e-mail address"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ET_emailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ET_typeinPSWAgain"
        android:layout_below="@+id/TV_emailAdd"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/BTN_cancel"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BTN_submit"
        android:layout_alignBottom="@+id/BTN_submit"
        android:layout_toLeftOf="@+id/ET_emailAddress"
        android:text="Cancel" />

    <Button
        android:id="@+id/BTN_submit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ET_emailAddress"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@+id/TV_createPSW"
        android:text="Submit" />

</RelativeLayout>
