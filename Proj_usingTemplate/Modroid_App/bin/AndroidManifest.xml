<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.modroid_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.modroid_app.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.modroid_app.LoginPage"
            android:label="@string/title_activity_login_page" >
        </activity>
        <activity
            android:name="com.example.modroid_app.AccountManagePage"
            android:label="@string/title_activity_account_manage_page" >
        </activity>
        <activity
            android:name="com.example.modroid_app.Register_Page"
            android:label="@string/title_activity_register__page" >
        </activity>
    </application>

</manifest>
